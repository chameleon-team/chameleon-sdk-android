  display: flex;
  width: 702cpx;
  height: 88cpx;
  background: @color-regular-blue;
  border: none;
  align-items: center;
  justify-content: center;
  border-radius: 4cpx;
  &:after{
    border: none;
  }
}
.cml-btn:active {
  opacity: 0.9;
}
.btn-text {
  text-align: center;
  vertical-align: middle;
  text-overflow: ellipsis;
  white-space: nowrap;
  outline: none;
  lines: 1;
  font-size: 36cpx;
  font-weight: 500;
  color: #ffffff;
}
</style>
