<template>
<view class="c-aside" style="{{mergeAsideStyle}}">
  <slot></slot>
</view>
</template>
<script>
class CAside {

  props = {
    asideStyle:{
      type:String,
      default:'',
    },
  }
  data = {
    defaultStyle:'width:200cpx;',
  }
  computed = {
    mergeAsideStyle(){
      return this.defaultStyle + this.asideStyle;
    }
  }

}

export default new CAside()
</script>
